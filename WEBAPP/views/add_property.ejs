<!-- views/admin_view.ejs -->

<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/admin/add_page.css">
    <title>Add Property</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body>

    <header>
        <nav>
            <ul>
                <li>
                    <a href="/admin">Dashboard</a>
                    <a href="../landlord">Landlords</a>
                    <a href="../property">Properties</a>
                    <a href="../tenant">Tenants</a>
                    <button onclick="location.href='/home'">Logout</button>
                </li>
            </ul>
        </nav>
    </header>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2>Property Information</h2>
                <form action="/admin/property/create" method="post">
                    <div class="mb-3">
                        <input type="text" id="Address" name="Address" placeholder="Adress" required>
                    </div>
                    <div class="mb-3">
                        <input type="text" id="City" name="City" placeholder="City" required>
                    </div>
                    <div class="mb-3">
                        <input type="number" id="ZipCode" name="ZipCode" placeholder="ZipCode" required min="0">
                    </div>
                    <div class="mb-3">
                        <input type="number" id="NumberOfBedrooms" name="NumberOfBedrooms"
                            placeholder="NumberOfBedrooms" required min="0">
                    </div>
                    <div class="mb-3">
                        <input type="number" id="NumberOfBathrooms" name="NumberOfBathrooms"
                            placeholder="NumberOfBathrooms" required min="0">
                    </div>
                    <div class="mb-3">
                        <input type="number" id="Rent" name="Rent" placeholder="Rent" required min="0">
                    </div>
                    <div class="mb-3">
                        <input type="number" id="LandlordId" name="LandlordId" placeholder="LandlordId" required
                            min="0">

                        <button type="submit" class="btn btn-primary">Add</button>
                </form>
            </div>
        </div>
    </div>
</body>

</html>