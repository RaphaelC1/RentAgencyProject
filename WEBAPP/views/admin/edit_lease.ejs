<% const title='Edit Lease' ; %>
    <%- include('header_admin.ejs', { title: title}) %>

        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <h1 class="mb-4">Lease Edit</h1>
                    <form action="/admin/lease/update/<%= lease.id %>" method="post">
                        <div class="mb-3">
                            <input type="date" id="leaseStart" name="leaseStart" class="form-control"
                                value='<%= lease.LeaseStart %>' required/>
                        </div>
                        <div class="mb-3">
                            <input type="date" id="leaseEnd" name="leaseEnd" class="form-control"
                                value='<%= lease.LeaseEnd %>' required/>
                        </div>
                        <div class="mb-3">
                            <input type="number" id="Rent" name="Rent" class="form-control" value='<%= lease.MonthlyRent %>' required/>
                        </div>
                        <div class="mb-3">
                            <input type="number" id="deposit" name="deposit" class="form-control"
                                value='<%= lease.SecurityDeposit %>' required/>
                            <div class="mb-3">
                                <input type="number" id="propertyId" name="propertyId" class="form-control"
                                    value='<%= lease.id_Properties %>' required/>
                            </div>
                            <div class="mb-3">
                                <input type="number" id="tenantId" name="tenantId" class="form-control"
                                    value='<%= lease.id_Tenants %>' required/>
                            </div>

                            <div class="mb-3 text-center">
                                <button type="submit" class="btn btn-success btn-lg">Modify</button>
                            </div>
                    </form>
                </div>
            </div>
        </div>
        </body>

        </html>