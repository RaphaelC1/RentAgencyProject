<% const title='Edit User' ; %>
    <%- include('header_admin.ejs', { title: title}) %>
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <h1 class="mb-4">User Edit</h1>
                    <form action="/admin/property/update/<%= user.user_id %>" method="post">
                        <div class="mb-3">
                            <input type="text" id="username" name="username" class="form-control"
                                value="<%= user.user_name %>" />
                        </div>
                        <div class="mb-3">
                            <input type="email" id="email" name="email" class="form-control"
                                value='<%= user.user_email %>' />
                        </div>
                        <div class="mb-3">
                            <input type="text" id="role" name="role" class="form-control"
                                value='<%= user.user_role %>' />
                        </div>
                        <div class="mb-3">
                            <input type="password" id="password" name="password" class="form-control"
                                value='<%= user.user_pass %>' />
                        </div>

                        <div class="mb-3 text-center">
                            <button type="submit" class="btn btn-success btn-lg">Modify</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        </body>

        </html>