<html>

<head>
    <% const title='Home_user' ; %>
        <%- include('header_user.ejs', { title: title}) %>
            <link rel="stylesheet" href="/css/homeStyle.css">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body>

    <div class="container_8">
        <h1 class="text-white">find a property to rent easily!</h1>

        <div class="appartment-form">
            <form action="/property/search" method="GET">
                <label for="city">City:</label>
                <select name="city">
                    <option value="">*</option>
                    <option value="Paris">Paris</option>
                    <option value="Bordeaux">Bordeaux</option>
                </select>

                <label for="start-date">Start Date:</label>
                <input type="date" id="start-date" name="start-date" required>

                <label for="end-date">End Date:</label>
                <input type="date" id="end-date" name="end-date" required>

                <label for="rent">Rent:</label>
                <input type="number" id="rent" name="rent">

                <button type="submit">Search</button>
            </form>

        </div>
    </div>

    <%- include('footer_user.ejs') %>
</body>



</html>