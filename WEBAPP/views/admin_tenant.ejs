<!-- views/admin_property.ejs -->
<% const title='Properties' ; %>
    <%- include('header_admin.ejs', { title: title}) %>

        <div id="panel">
            <h1>Tenants</h1>
            <div id="tenant-buttons">
                <button class="action-button add-button" onclick="location.href='../admin/tenant/add'">Add</button>
                <!-- No need for a separate delete button here -->
            </div>
        </div>

        <div class="container">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Action</th> <!-- New column for the delete button -->
                    </tr>
                </thead>
                <tbody>
                    <% for (let i=0; i < tenants.length; i++) { %>
                        <tr>
                            <td>
                                <%= tenants[i].id %>
                            </td>
                            <td>
                                <%= tenants[i].FirstName %>
                            </td>
                            <td>
                                <%= tenants[i].LastName %>
                            </td>
                            <td>
                                <%= tenants[i].Email%>
                            </td>
                            <td>
                                <%= tenants[i].PhoneNumber %>
                            </td>
                            <td>
                                <form method="post" action="/admin/tenant/delete"
                                    onsubmit="return confirmDelete('<%= tenants[i].id %>');">
                                    <button type="button"
                                        onclick="location.href='/admin/tenant/edit?id=<%= tenants[i].id %>'"
                                        class="btn btn-primary">Edit</button>
                                    <input type="hidden" name="id" value="<%= tenants[i].id %>">
                                    <button type="submit" class="btn btn-danger">Delete</button>

                                </form>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>

        <script>
            function confirmDelete(tenantId) {
                var confirmResult = confirm("Are you sure you want to delete this tenant ?");

                // If user clicks "OK", continue with form submission
                return confirmResult;
            }
        </script>